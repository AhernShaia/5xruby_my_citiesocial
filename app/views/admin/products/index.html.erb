
<h1 class="title">
    商品列表
</h1>
    <%= link_to "新增", new_admin_product_path, class: "button is-primary" %>
<hr>
<div class="container">
<table class= "table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
 <thead>
        <tr>
            <th>商品名稱</th>
            <th>產品編號</th>
            <th>定價</th>
            <th>售價</th>
            <th>銷售狀態</th>
            <th>商品分類</th>
            <th>描述</th>
            <th></th>
        </tr>
    </thead>


 <tbody>
    <% @products.each do |product|%>
    
        <tr>
            <td><%= product.name %></td>
            <td><%= product.vendor_id %></td>
            <td><%= product.list_price%></td>
            <td><%= product.sell_price %></td>
            <td><%= "已上架" if product.on_sell%></td>
            <td><%= product.category_id if product.category_id %></td>
            <td><%= product.description %></td>
            <td>
                <%= link_to "編輯", edit_admin_product_path(product), class: 'button is-light is-small' %>
                <%= link_to "刪除", admin_product_path(product),method: "delete", data: { confirm: '確認刪除?!' }, class: 'button is-danger is-small' %>
            </td>

            
        </tr>
        <% end %>
    </tbody>

</table>
    </div>
    <hr>
<%== pagy_nav(@pagy) %>
<%== pagy_info(@pagy) %>
